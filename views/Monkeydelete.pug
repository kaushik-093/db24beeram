extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let Monkeyid = toShow._id 
    - let name = toShow.name 
    - let color = toShow.color 
    - let weight = toShow.weight 
    - let actionid = "/resource/Monkey/" + Monkeyid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='MonkeyAttr mr-3') Monkey ID is: 
        div #{Monkeyid} 
      div.row 
        div(class='MonkeyAttr mr-3') Monkey name is: 
        div #{name} 
      div.row 
        div(class='MonkeyAttr mr-3') Monkey color is: 
        div #{color} 
      div.row 
        div(class='MonkeyAttr mr-3') Monkey weight is: 
        div #{weight} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the Monkey collection 
      window.location.href='/Monkey' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Don't need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/Monkey' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 